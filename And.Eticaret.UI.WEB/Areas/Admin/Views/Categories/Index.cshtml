@model IEnumerable<And.Eticaret.Core.Model1.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Katagori</h2>

<p>
    @Html.ActionLink("Yeni Katagori Oluştur", "Create", new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        
        <th>
            Adı
        </th>
        <th>
            Aktiflik
        </th>
        <th>
            Son Düzenleme
        </th>
        
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
       
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detay", "Details", new { id=item.ID }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
