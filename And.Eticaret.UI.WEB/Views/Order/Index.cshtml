@model IEnumerable<And.Eticaret.Core.Model1.Entity.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Siparişlerim</h2>


<table class="table">
    <tr>

        <th>
            Sipariş No :
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Name)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.TotalProductPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalTaxPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDiscount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            Sipariş Tarihi
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserAdress.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalProductPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalTaxPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalDiscount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
       
        <td>
           
            @Html.ActionLink("Sipariş Detayı", "Detail", new { id=item.ID })
        </td>
    </tr>
}

</table>
